<%- include('includes/header')%>
<div class="container mx-auto px-4">
  <h1 class="text-center text-3xl mt-20">Edit your post ğŸ“</h1>
  <!-- flash message -->
  <div class="pt-4"><%- include('includes/flash') %></div>
  <div
    class="
      bg-gradient-to-r
      from-indigo-300
      to-pink-500
      p-10
      max-w-3xl
      mx-auto
      rounded
      mt-24
      shadow-lg
      mb-12
    "
  >
    <a href="/post/<%= post._id %>"
      ><button
        class="
          py-1
          px-3
          bg-black
          rounded
          text-white
          hover:bg-gray-800
          transition-all
        "
      >
        Back
      </button></a
    >
    <form
      action="/post/<%= post._id %>/update"
      method="POST"
      class="flex flex-col"
    >
      <input
        value="<%= post.title %>"
        name="title"
        type="text"
        placeholder="Post Title..."
        class="
          p-3
          my-4
          rounded
          shadow
          focus:outline-none focus:ring focus:ring-indigo-500
        "
      />
      <textarea
        name="body"
        cols="30"
        rows="10"
        placeholder="Post Content..."
        class="
          p-3
          my-4
          rounded
          shadow
          focus:outline-none focus:ring focus:ring-indigo-500
        "
      >
<%= post.body %></textarea
      >
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <button
        class="
          mt-4
          bg-black
          hover:opacity-75
          p-3
          rounded
          text-white
          transition-all
          focus:outline-none focus:ring focus:ring-indigo-500
        "
      >
        Update
      </button>
    </form>
  </div>
</div>
<%- include('includes/footer')%>
