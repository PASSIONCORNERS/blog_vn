<%- include('includes/header')%>

<div class="container mx-auto px-4">
  <h1 class="text-center text-3xl mt-20">Create a blog post ðŸ˜Š</h1>
  <div
    class="
      bg-gradient-to-r
      from-indigo-300
      to-pink-500
      p-10
      max-w-3xl
      mx-auto
      rounded
      mt-24
      shadow-lg
      mb-12
    "
  >
    <form action="/create-post" method="POST" class="flex flex-col">
      <input
        name="title"
        type="text"
        placeholder="Post Title..."
        class="
          p-3
          my-4
          rounded
          shadow
          focus:outline-none focus:ring focus:ring-indigo-500
        "
      />
      <textarea
        name="body"
        cols="30"
        rows="10"
        placeholder="Post Content..."
        class="
          p-3
          my-4
          rounded
          shadow
          focus:outline-none focus:ring focus:ring-indigo-500
        "
      ></textarea>
      <button
        class="
          mt-4
          bg-black
          hover:opacity-75
          p-3
          rounded
          text-white
          transition-all
          focus:outline-none focus:ring focus:ring-indigo-500
        "
      >
        Post
      </button>
    </form>
  </div>
</div>
<%- include('includes/footer')%>
